<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Νέο Προϊόν</h1>
    <div class="col-6 offset-3">
        <form action="/products" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Όνομα Προϊόντος</label>
                <input class="form-control" type="text" id="title" name="product[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <input type="file" name="image" id="">
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="product[image]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>



            <div class="mb-3">
                <button class="btn btn-success">Add Product</button>
            </div>
        </form>
        <a href="/products">All Products</a>
    </div>
</div>